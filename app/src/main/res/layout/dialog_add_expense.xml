<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/icon_circle_gradient"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💰"
                    android:textSize="28sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Expense"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your spending"
                    android:textSize="13sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Amount Input with Currency Symbol -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"/>

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="0.00"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textColorHint="#D1D5DB"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingStart="8dp"/>

        </LinearLayout>

        <!-- Description Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:hint="What was this for?"
            android:textSize="15sp"
            android:textColor="#1F2937"
            android:textColorHint="#9CA3AF"
            android:padding="16dp"
            android:inputType="textCapSentences"
            android:maxLines="2"/>

        <!-- Category Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"/>

        <!-- Category Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/categoryFood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍔"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚗"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryHotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏨"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryFun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎬"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:id="@+id/categoryShopping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛍️"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryFuel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⛽"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryOther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/category_selector"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📦"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Hidden spinner for compatibility -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <!-- Paid By Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid By"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <Spinner
                android:id="@+id/spinnerPaidBy"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"
                android:popupBackground="#FFFFFF"/>

        </LinearLayout>

        <!-- Self Paid Toggle -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelfPaid"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="EVERYONE PAID FOR THEMSELVES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:strokeColor="#1F2937"
            app:strokeWidth="2dp"
            android:layout_marginTop="12dp"
            app:icon="@android:drawable/ic_menu_my_calendar"
            app:iconTint="#1F2937"
            app:iconGravity="textStart"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelExpense"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius="14dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="2dp"
                android:layout_marginEnd="8dp"
                app:elevation="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveExpense"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Add Expense"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1F2937"
                app:cornerRadius="14dp"
                android:layout_marginStart="8dp"
                app:elevation="4dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>