<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Category Icon Circle -->
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/category_circle"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCategoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍔"
                android:textSize="24sp"/>

        </LinearLayout>

        <!-- Expense Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch at restaurant"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#6366F1"
                    android:background="@drawable/category_tag"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/dot_separator"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024 10:30"
                    android:textSize="11sp"
                    android:textColor="#9CA3AF"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvPaidBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid by Ajit"
                android:textSize="12sp"
                android:textColor="#10B981"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="4dp"
                android:drawableTint="#10B981"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <!-- Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end|center_vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹500"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>