<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Trip Icon -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/category_circle"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🗺️"
                    android:textSize="28sp"/>

            </LinearLayout>

            <!-- Trip Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvTripName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvTripDates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2025 - 05/01/2025"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@android:drawable/ic_menu_today"
                    android:drawableTint="#6B7280"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ONGOING"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </LinearLayout>

        <!-- Expense Amount Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_gradient"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Expenses"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>

                <TextView
                    android:id="@+id/tvTotalExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0.00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#FFFFFF"
                android:alpha="0.5"/>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarkComplete"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Complete"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#10B981"
                android:backgroundTint="#ECFDF5"
                app:cornerRadius="12dp"
                android:layout_marginEnd="6dp"
                app:elevation="0dp"
                app:strokeColor="#10B981"
                app:strokeWidth="2dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconTint="#10B981"
                app:iconGravity="textStart"
                app:iconSize="18dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:backgroundTint="#FEF2F2"
                app:cornerRadius="12dp"
                android:layout_marginStart="6dp"
                app:elevation="0dp"
                app:strokeColor="#EF4444"
                app:strokeWidth="2dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="#EF4444"
                app:iconGravity="textStart"
                app:iconSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>